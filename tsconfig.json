{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"lib": ["ES2018", "DOM"],
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
